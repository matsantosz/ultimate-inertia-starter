{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./resources/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    },
    "types": ["vite/client"]
  },
  "include": ["resources/**/*.ts", "resources/**/*.vue"]
}
